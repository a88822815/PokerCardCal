<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">

    <Button
        android:id="@+id/button2"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:text="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.045"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/button3"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:text="3"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toTopOf="@+id/button2"
        app:layout_constraintLeft_toRightOf="@+id/button2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="56dp"
        android:layout_height="55dp"
        android:text="4"
        android:layout_marginLeft="6dp"
        app:layout_constraintTop_toTopOf="@+id/button3"
        app:layout_constraintLeft_toRightOf="@+id/button3"  />

    <EditText
        android:id="@+id/editText11"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#eee"
        android:editable="false"
        android:layout_marginLeft="25dp"
        android:textSize="30dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@+id/editText1"
        app:layout_constraintLeft_toRightOf="@+id/editText1" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="60dp"
        android:layout_height="40dp"
        android:layout_marginLeft="6dp"
        android:gravity="center"
        android:background="#eee"
        android:hint="金额:"
        app:layout_constraintBottom_toBottomOf="@+id/button4"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        app:layout_constraintTop_toTopOf="@+id/button4" />

    <EditText
        android:id="@+id/nums"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:background="#eee"
        android:text="5"
        app:layout_constraintBottom_toBottomOf="@+id/text1"
        app:layout_constraintLeft_toRightOf="@+id/text1"
        app:layout_constraintTop_toTopOf="@+id/text1" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:background="#03A9F4"
        android:gravity="center"
        android:text="陈"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.123" />

    <ImageView
        android:id="@+id/plus1"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:src="@mipmap/plus"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toTopOf="@+id/editText21"
        app:layout_constraintLeft_toRightOf="@+id/editText21" />

    <ImageView
        android:id="@+id/minus1"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:src="@mipmap/minus"
        app:layout_constraintTop_toBottomOf="@+id/plus1"
        app:layout_constraintLeft_toLeftOf="@+id/plus1" />

    <EditText
        android:id="@+id/editText12"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#eee"
        android:editable="false"
        android:layout_marginLeft="25dp"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/editText2"
        app:layout_constraintLeft_toRightOf="@+id/editText2"
        />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="#F1D06D"
        android:gravity="center"
        android:text="李"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText1"
        app:layout_constraintTop_toBottomOf="@+id/editText1"

        />

    <EditText
        android:id="@+id/editText14"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#eee"
        android:editable="false"
        android:layout_marginLeft="25dp"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/editText4"
        app:layout_constraintLeft_toRightOf="@+id/editText4" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="#A469AE"
        android:gravity="center"
        android:text="卢"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText2"
        app:layout_constraintTop_toBottomOf="@+id/editText2" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="70dp"
        android:layout_height="90dp"
        android:layout_marginTop="10dp"
        android:background="#C8EE9C"
        android:gravity="center"
        android:text="石"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="@+id/editText3"
        app:layout_constraintTop_toBottomOf="@+id/editText3" />

    <EditText
        android:id="@+id/editText13"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:background="#eee"
        android:editable="false"
        android:layout_marginLeft="25dp"
        android:textAlignment="center"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/editText3"
        app:layout_constraintLeft_toRightOf="@+id/editText3" />

    <EditText
        android:id="@+id/editText21"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="#eee"
        android:editable="false"
        android:layout_marginLeft="1dp"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/editText11"
        app:layout_constraintLeft_toRightOf="@+id/editText11" />

    <EditText
        android:id="@+id/editText22"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="#eee"
        android:editable="false"
        android:layout_marginLeft="1dp"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/editText12"
        app:layout_constraintLeft_toRightOf="@+id/editText12" />

    <EditText
        android:id="@+id/editText23"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="#eee"
        android:editable="false"
        android:layout_marginLeft="1dp"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@+id/editText13"
        app:layout_constraintLeft_toRightOf="@+id/editText13" />

    <EditText
        android:id="@+id/editText24"
        android:layout_width="60dp"
        android:layout_height="90dp"
        android:background="#eee"
        android:editable="false"
        android:textSize="30dp"
        android:layout_marginLeft="1dp"
        app:layout_constraintTop_toTopOf="@+id/editText14"
        app:layout_constraintLeft_toRightOf="@+id/editText14" />

    <ImageView
        android:id="@+id/plus3"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:src="@mipmap/plus"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toTopOf="@+id/editText23"
        app:layout_constraintLeft_toRightOf="@+id/editText23" />

    <ImageView
        android:id="@+id/minus3"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:src="@mipmap/minus"
        app:layout_constraintTop_toBottomOf="@+id/plus3"
        app:layout_constraintLeft_toLeftOf="@+id/plus3" />

    <ImageView
        android:id="@+id/plus4"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:src="@mipmap/plus"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toTopOf="@+id/editText24"
        app:layout_constraintLeft_toRightOf="@+id/editText24" />

    <ImageView
        android:id="@+id/minus4"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:src="@mipmap/minus"
        app:layout_constraintTop_toBottomOf="@+id/plus4"
        app:layout_constraintLeft_toLeftOf="@+id/plus4" />

    <ImageView
        android:id="@+id/plus2"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:src="@mipmap/plus"
        android:layout_marginLeft="3dp"
        app:layout_constraintTop_toTopOf="@+id/editText22"
        app:layout_constraintLeft_toRightOf="@+id/editText22" />

    <ImageView
        android:id="@+id/minus2"
        android:layout_width="56dp"
        android:layout_height="45dp"
        android:src="@mipmap/minus"
        app:layout_constraintTop_toBottomOf="@id/plus2"
        app:layout_constraintLeft_toLeftOf="@id/plus2" />

    <Button
        android:id="@+id/submit"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_marginLeft="124dp"
        android:layout_marginTop="20dp"
        android:text="保存"
        app:layout_constraintLeft_toLeftOf="@id/editText4"
        app:layout_constraintTop_toBottomOf="@id/editText4" />

    <Button
        android:id="@+id/clearpr"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="55dp"
        android:text="重新开始"
        app:layout_constraintRight_toLeftOf="@id/submit"
        app:layout_constraintTop_toTopOf="@id/submit" />


</androidx.constraintlayout.widget.ConstraintLayout>